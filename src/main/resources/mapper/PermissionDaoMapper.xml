<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.warren.fleet.security.mapper.PermissionDao">

    <select id="finaAll"  resultType="com.warren.fleet.security.bean.Permission">
        select * from permission;
    </select>
    
    <select id="findByAdminUserId" parameterType="int" resultType="com.warren.fleet.security.bean.Permission">
        select p.*
        from user u
        left join user_role ur on u.uid = ur.uid
        left join role r on ur.rid - r.rid
        left join role_permission rp on rp.uid = r.rid
        left join permission p on p.pid = rp.pid
        where u.uid = #{uid}
    </select>

</mapper>